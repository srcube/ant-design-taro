{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "incremental": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
