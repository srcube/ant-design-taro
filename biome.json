{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": { "ignore": ["dist", ".moon/cache", ".env.*"] },
  "organizeImports": { "enabled": false },
  "linter": { "enabled": false },
  "formatter": {
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
